.blocks
  .green
    color: rgb(64, 169, 83)
    font-weight 600
  span.blue
    color: rgb(0, 153, 204);
    font-weight 600
  .with-border
    font-size: 20px
    font-weight: 600
    color #000
    border-right: 1px solid rgb(204, 204, 204)
    padding-right 15px
    display inline-block
    margin-right 15px
  .btn .fa
    margin-right 10px
  .bg-important
    background-color: rgb(255, 216, 0)
  .btn.btn-default
    background-image: linear-gradient(to top, rgb(237, 237, 237) 0%, rgb(255, 255, 255) 100%)
    width calc(100% - 42px)
    font-size 16px
    font-weight 300
    margin-bottom: 5px;
    &.active {
      background: #049CDB;
      color: #fff;
      box-shadow: none;
      border-color: #fff;
    }
  .btn.btn-question
    color: rgb(4, 156, 219)
    background-color: rgb(229, 246, 229)
    border: 1px solid rgb(150, 224, 150)
    border-radius: 4px
    font-size 16px
    font-weight 300
  padding 20px 0
  .block
    border-radius 2px
    //overflow hidden
    margin-bottom 20px
    p.bg-success
      padding 15px
      font-size 13px
      font-weight 300
    > header
      font-size 20px
      color #fff
      padding 10px
      .num
        font-size 24px
        font-weight 600
        padding 0 15px
        margin-right 15px
        border-right 1px solid rgb(166,166,166)
    .content
      border: 1px solid rgb(204, 204, 204)
      ol
        padding 0
        list-style-position inside
      .block-item
        .important-section
          margin-top 35px!important
        padding 10px
        margin-bottom 10px
        background-color: rgb(247, 247, 247)
        border: 1px solid rgb(204, 204, 204)
        > .row
          margin-top 10px
          margin-bottom 10px
        &.block-item-info
          background-color: rgb(240, 251, 255)
          img 
            margin-top 25px
            display inline-block
  .personal-data
    .img-wrp
      position relative
      display inline-block
      margin 0 15px
      .fa
        position absolute
        cursor pointer
        font-size 18px
        top -5px
        right -5px
        color: rgb(102, 102, 102);
    .form-inline 
      h4
        color: rgb(4, 156, 219)
        font-weight 600
      padding 15px 0 0
      margin 15px 0 0
      border-top 1px solid rgb(204, 204, 204)
      @extend .clearfix
      input
        width 100%
        margin-bottom 20px
.submit-row
  color: #fff
  margin-bottom 60px
  .left
    .sum-wrp
      background rgb(4, 156, 219) url(/assets/images/submit.png) left 20px center no-repeat
      border-radius: 2px 2px
      padding 10px 20px
      font-size 24px
      font-weight 500
      span
        vertical-align middle
      .sum
        font-size 30px
        font-weight 600
        padding-left 20px
  .right
    .btn
      width 100%
      padding 14px 20px
      font-size 24px
      font-weight 600
.entity .blocks .personal-data .form-inline
  border none
    