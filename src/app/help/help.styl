.push-header
  margin-top 20px
.help
  h5.blue
    color: rgb(4, 156, 219);
    font-weight 600
  
  ul.unstyled
    list-style-type none
    padding-left 0
    li
      a
        color: rgb(51, 51, 51)
        font-size 13px
        text-decoration underline
        &:hover
          text-decoration none
  ul li
    &.green
      color: rgb(64, 169, 83)
    &.yellow
      color: rgb(204, 204, 0)
    &.red
      color: rgb(204, 0, 0)
    span
      color: rgb(51, 51, 51)!important
      font-weight 600
  .what-is-site
    font-size 13px


.popup-wrapper
  position fixed
  width 100%
  z-index 999
  left 0
  top 0
  height 100%
  padding-top 20px
  background rgba(0,0,0,.5)
  .popup
    background #fff
    margin 0 auto
    padding 20px
    border-radius 5px
    .close
      position absolute
      right 10px
      top 10px
      color #fff
      font-size 30px