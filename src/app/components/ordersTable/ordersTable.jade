.container.table-container
  .pagination.top
    a.btn.btn-left
    a.btn.btn-primary(href="") 1
    a.btn.btn-default(href="") 2
    a.btn.btn-default(href="") 3
    a.btn.btn-default(href="") 4
    a.btn.btn-default(href="") 5
    a.btn.btn-default(href="") 6
    a.btn.btn-default(href="") 7
    a.btn.btn-default(href="") 8
    a.btn.btn-default(href="") 9
    a.btn.btn-right
  .table-responsive
    table.table.table-striped
      thead
        tr
          th #
          th Имя
          th Отчет
          th Сумма
          th Опции
      tbody
        tr(ng-repeat="order in data")
          td 
            a(href="") {{order.id}}
          td 
            {{order.title}}
          td 
            span(ng-class="{green:button.status == 2,red:button.status == 3,orange:button.status == 1}" ng-repeat="button in order.orderbuttons" ng-click="openDoc(button.file)") {{button.button.title}}
            //- span
            //-   strike Идентификация
          td {{order.cost}}P
          td(ng-if="type == 'current'")
            button.btn.btn-option 
              i.fa.fa-plus-circle
              | Дозаказать проверку
            br
            button.btn.btn-option(ng-click="changeStatus(order, 4)")
              i.fa.fa-archive
              | Переместить в архив
            br
            button.btn.btn-option(ng-click="changeStatus(order, 0)")
              i.fa.fa-ban
              | Отменить заказ
          td(ng-if="type == 'archive'")
            button.btn.btn-option(ng-click="changeStatus(order, 1)") 
              i.fa.fa-undo
              | Вернуть


  .pagination.bottom
    a.btn.btn-left
    a.btn.btn-primary(href="") 1
    a.btn.btn-default(href="") 2
    a.btn.btn-default(href="") 3
    a.btn.btn-default(href="") 4
    a.btn.btn-default(href="") 5
    a.btn.btn-default(href="") 6
    a.btn.btn-default(href="") 7
    a.btn.btn-default(href="") 8
    a.btn.btn-default(href="") 9
    a.btn.btn-right