header.main
  .header-top
    padding 30px 0
  nav a
    color: rgb(102, 102, 102);
    font-size: 12px;
    transition all .2s
    font-weight: 600;
    line-height: 20px;
    text-transform uppercase
    margin 0 17px
    text-decoration none
    &:hover,
    &.active
      color: rgb(51, 153, 0);
      border-bottom 2px solid
    i 
      padding-right 3px
  .btn.btn-cash
    line-height 28px
    padding 0px 25px
    overflow hidden
    max-width 100%
    background-color: rgb(255, 255, 255);
    border: 1px solid rgb(64, 169, 83);
    border-radius: 2px;
    color: rgb(51, 51, 51);
    font-size: 14px;
    font-weight 600
    
  .user-nickname
    padding-left 10px
    color: rgb(51, 51, 51);
    font-size: 14px;
    font-weight: 700;
  .info-box
    background-color: rgba(102, 204, 102, 0.17);
    border-radius: 4px;
    font-size: 13px;
    color: rgb(51, 51, 51);
    font-weight: 300;
    padding 0 15px
    height 80px
    display: flex;
    align-content: center;
    justify-content: center;
    flex-direction: column;
    a
      color: rgb(64, 169, 83);
      font-weight: 600;
  .tool-wrapper
    position relative
    display inline-block
    padding-right 10px
    cursor pointer
    &.active
      span
        color: #fff
      background #000
      button
        background #049cdb
        background-color #049cdb
        color: #fff
        
  .popup-tool
    background #fff
    box-shadow 0 3px 7px rgba(0,0,0,.5)
    position absolute
    width 100%
    left 0
    top 100%
    border-radius 0 0 3px 3px
    z-index 2
    padding 5px 0
    a
      display block
      width 100%
      padding 5px 10px 5px 40px
      text-align left
      color #000
      &.balance
        background url(/assets/images/purse-blue.png) 10px center no-repeat
      &.settings
        background url(/assets/images/settings-blue.png) 10px center no-repeat
      &.exit
        background url(/assets/images/exit-blue.png) 10px center no-repeat